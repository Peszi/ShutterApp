<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- MAIN -->
    <style name="MainTitle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="MainDescription">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainFooter">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainInput">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/all_input</item>
        <item name="android:ems">10</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/all_button</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainDropDown">
        <item name="android:layout_width">167dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/all_input</item>
    </style>

    <style name="MainDropDownTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="MainDropDownImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProfileInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">#0000</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
